1.  print name n times

#include<iostream>
using namespace std;
int print(int i,int n){
    if(i>n)
        return 0;
        
    cout<<"Hello ";
    print(i+1,n);
}
int main(){
    int n; cin>>n;
    print(1,n);
}



2.  print 1 to n


#include<iostream>
using namespace std;
int print(int i,int n){
    if(i>n)
        return 0;
        
    cout<<i<<" ";
    print(i+1,n);
}
int main(){
    int n; cin>>n;
    print(1,n);
}


3.print n to 1

#include<iostream>
using namespace std;
int print(int i,int n){
    if(i>n)
        return 0;
        
    
    print(i+1,n);
    cout<<i<<" ";
}
int main(){
    int n; cin>>n;
    print(1,n);
}


4. backtracking
#include<iostream>
using namespace std;
int print(int i,int n){
    if(i<1)
        return 0;
        
   cout<<i<<" ";
    print(i-1,n);
     
    
    
}
int main(){
    int n; cin>>n;
    print(n,n);
}



5. backtracking
#include<iostream>
using namespace std;
int print(int i,int n){
    if(i<1)
        return 0;
        
   
    print(i-1,n);
    cout<<i<<" ";
     
    
    
}
int main(){
    int n; cin>>n;
    print(n,n);
}


